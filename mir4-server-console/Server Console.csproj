<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <RootNamespace>Server_Console</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>Mir4.ico</ApplicationIcon>
    <BaseOutputPath>bin\Server-Launcher</BaseOutputPath>
    <StartupObject>Server_Console.Program</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Mir4.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="WinSCP" Version="6.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="AutoPatcher\" />
  </ItemGroup>

</Project>